generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())

  events Event[]
}

model Event {
  id Int @id @default(autoincrement())
  userId Int
  title String
  date DateTime @default(now())
  recurring Boolean
  color String

  // Possible new fields for future update
  description String?
  start DateTime?
  end DateTime?

  user User @relation(fields: [userId], references: [id])
}
